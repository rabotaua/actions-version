{
  "name": "actions-version",
  "version": "1.0.0",
  "description": "GitHub action to generate version numbers based on current build",
  "main": "dist/index.js",
  "scripts": {
    "build": "parcel build",
    "lint": "eslint --fix",
    "format": "prettier --write .",
    "outdated": "npx npm-check-updates",
    "upgrade": "npm run outdated -- -u",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.{ts,json,md,yml}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rabotaua/actions-version.git"
  },
  "targets": {
    "default": {
      "context": "node",
      "outputFormat": "commonjs",
      "isLibrary": true,
      "optimize": false,
      "includeNodeModules": true,
      "sourceMap": false,
      "source": "src/index.ts",
      "distDir": "./dist",
      "engines": {
        "node": "12"
      }
    }
  },
  "keywords": [
    "github",
    "actions",
    "version"
  ],
  "author": "Alexandr Marchenko <marchenko.alexandr@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rabotaua/actions-version/issues"
  },
  "homepage": "https://github.com/rabotaua/actions-version#readme",
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "parcel": "^2.16.3",
    "prettier": "3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
